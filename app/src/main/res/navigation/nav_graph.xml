<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pokedexFragment">
    <fragment
        android:id="@+id/pokedexFragment"
        android:name="com.kagiya.pokedex.ui.PokedexFragment"
        android:label="PokedexFragment" >
        <action
            android:id="@+id/show_pokemon_details"
            app:destination="@id/pokemonDetailsFragment"
            app:popUpToInclusive="@id/favoritesFragment"/>
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailsFragment"
        android:name="com.kagiya.pokedex.ui.PokemonDetailsFragment"
        android:label="PokemonDetailsFragment" >
        <argument
            android:name="pokemonName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/regionsFragment"
        android:name="com.kagiya.pokedex.ui.RegionsFragment"
        android:label="RegionsFragment" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.kagiya.pokedex.ui.FavoritesFragment"
        android:label="FavoritesFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.kagiya.pokedex.ui.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>